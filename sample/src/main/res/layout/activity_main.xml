<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_default_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认Activity" />

    <Button
        android:id="@+id/btn_default_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认Fragment" />

    <Button
        android:id="@+id/btn_custom_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全局自定义UI配置Activity" />

    <Button
        android:id="@+id/btn_custom_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全局自定义UI配置Fragment" />

    <Button
        android:id="@+id/btn_local_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="局部自定义UI配置Activity" />

    <Button
        android:id="@+id/btn_local_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="局部自定义UI配置Fragment" />

    <Button
        android:id="@+id/btn_sample_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示Activity" />

    <Button
        android:id="@+id/btn_sample_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示Fragment" />

    <Button
        android:id="@+id/btn_sample_vm_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示VM缺省页" />

</androidx.appcompat.widget.LinearLayoutCompat>