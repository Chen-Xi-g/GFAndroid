<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.alvin.gf_android.model.ExpandEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemTvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemTvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@{item.content}"
            android:textColor="@color/content_color"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="@id/itemTvTitle"
            app:layout_constraintStart_toStartOf="@id/itemTvTitle"
            app:layout_constraintTop_toBottomOf="@id/itemTvTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>